<h1>{{model.title}}</h1>
<strong>Abstract</strong>
<p>{{model.abstract}}</p>
<label>Starts</label>
<p>{{model.start_time}}</p>
<label>Ends</label>
<p>{{model.end_time}}</p>
<div class="InputAddOn">
  <form class="ratingform well" action="ratings" enctype='application/json'>
    <label for="new-comment">Key takeaway</label>
    <textarea id="new-comment" type="text" rows="3" class="InputAddOn-field comment" name='comment'></textarea>
    <label for="new-rating">Rating (1-5)</label>
    <select id="new-rating" class="InputAddOn-field rating" name='rating'>
      <option selected></option>
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
    <br />
    <input name='submit' class="btn-large"type='submit' {{action 'addRating'}}id="btn-submit-rating" >
  </form>
</div>
<br />
<h3>Other peoples impressions</h3>
<ul>
{{#each model.ratings}}
<li class="ratings-item well">
	<p>Grade: {{rating}}/5</p>
  <p>Key takeaway: {{comment}}</p>
</li>
{{/each}}
</ul>
